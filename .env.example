# Zerodha Kite Connect API Credentials
ZERODHA_API_KEY=your_zerodha_api_key
ZERODHA_ACCESS_TOKEN=your_zerodha_access_token

# Market Data API Key (stock.indianapi.in)
INDIAN_MARKET_API_KEY=your_indian_market_api_key

# LLM API Keys
OPENAI_API_KEY=your_openai_api_key
OPENROUTER_API_KEY=your_openrouter_api_key

# Social Media & Search APIs
TWITTER_API_KEY=your_twitter_api_key
GOOGLE_SEARCH_API_KEY=your_google_search_api_key
GOOGLE_CSE_ID=your_google_cse_id

# Database Configuration (MongoDB)
MONGO_URI=mongodb://localhost:27017
USER_ID=user_mongo_1

# Twitter Analytics DB
TWITTER_DB_NAME=TwitterAnalytics
TWITTER_COLLECTION=SentimentAnalysis

# Technical Indicator DB
TECHNICAL_DB_NAME=indicator_signals
TECHNICAL_COLLECTION=indicators

# News API Configuration
NEWS_API_URL=http://localhost:8000/api/news/summarized

# News Scraper MongoDB (for direct access - faster than API)
# If set, news agent will query MongoDB directly instead of calling the API
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/
MONGODB_DB=news_db

# Kafka Messaging Configuration
KAFKA_BOOTSTRAP_SERVERS=localhost:9092
KAFKA_TOPIC_TRADE_SIGNALS=trade_signals
KAFKA_TOPIC_STOCK_ANALYSIS=stock_analysis
KAFKA_GROUP_ID=stocksagent-consumers
KAFKA_SECURITY_PROTOCOL=SASL_SSL
KAFKA_SASL_MECHANISM=PLAIN
KAFKA_SASL_USERNAME=your_kafka_username
KAFKA_SASL_PASSWORD=your_kafka_password

# System Settings
LIVE_MODE=false
STOCKSAGENT_LOG_LEVEL=INFO
STOCKSAGENT_MODE=mock
